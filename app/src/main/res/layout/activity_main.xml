<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#80000000"
        android:elevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"

            >
            <TextView
                android:id="@+id/logtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="log"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/relative_textureView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        >
        <TextureView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawingCacheQuality="auto"
            android:backgroundTint="@color/light_black"
            android:foregroundTint="@color/light_black"
            />


    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/aux_cam_switch"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardview_buttons_dock"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/light_black"
        android:elevation="20dp"
        android:textSize="11sp"
        app:cardCornerRadius="16dp"
        tools:ignore="SmallSp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ultra_wide"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="0.6"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/main_wide"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/ultra_wide"
                android:background="@drawable/colored_textview"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="1.0"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/macro_tele"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/main_wide"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="2.0"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:id="@+id/cardview_buttons_dock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#020202"
        android:paddingVertical="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <RelativeLayout
            android:id="@+id/relative_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageViewHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="38dp"

                >
                <ImageView
                    android:id="@+id/image_gallery"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/rami"
                    android:scaleType="centerCrop"
                    android:focusable="true"
                    android:clickable="true"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/capture"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#C1F6F3F3"
                android:hapticFeedbackEnabled="true"
                app:cornerRadius="60dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/front_back_switch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:background="#020202"
                android:scaleType="fitXY"
                android:src="@drawable/_front_camera_switch" />


        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>