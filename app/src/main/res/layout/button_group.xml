<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/top_bar_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp">
        <ImageButton
            android:id="@+id/aspectRatio_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_aspect_ratio" />
        <ImageButton
            android:id="@+id/grid_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_grid_btn" />
        <ImageButton
            android:id="@+id/grid_btn0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_hdr" />
        <ImageButton
            android:id="@+id/flash"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_flash_off" />
        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_settings_menu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_bar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@id/top_bar_0"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/timer_btn0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_raw" />
        <ImageButton
            android:id="@+id/flash0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_awb" />
        <ImageButton
            android:id="@+id/timer_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_timer_btn" />
        <ImageButton
            android:id="@+id/aspectRatio_btn0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_ai" />
        <ImageButton
            android:id="@+id/settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_icon_settings" />

    </LinearLayout>
</merge>