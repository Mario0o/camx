<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/parent"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black"
tools:context=".CamxFragment">

<androidx.fragment.app.FragmentContainerView
    android:id="@+id/settings_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />

<RelativeLayout
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="0dp"
    android:background="@drawable/rounded_relative_layout"
    android:elevation="4dp"
    >

    <include
        android:id="@+id/btn_group"
        layout="@layout/button_group" />

    <com.uncanny.camx.CustomViews.GestureBar
        android:id="@+id/gesture_bar"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>

<com.uncanny.camx.CustomViews.AutoFitPreviewView
    android:id="@+id/preview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="52dp"
    />

<TextView
    android:id="@+id/zoom_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="36dp"
    android:textSize="38sp"
    android:textColor="#E3DDDD"
    android:visibility="invisible"
    android:layout_below="@id/appbar"
    />

<com.uncanny.camx.CustomViews.Grids
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:layout_alignTop="@id/preview"
    />

<com.uncanny.camx.CustomViews.FocusCircle
    android:id="@+id/focus_circle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_alignTop="@id/preview"
    />

<com.uncanny.camx.CustomViews.FaceMeteringRect
    android:id="@+id/fm_rect"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_below="@id/appbar"
    />

<LinearLayout
    android:id="@+id/aux_cam_switch"
    android:layout_width="130dp"
    android:layout_height="38dp"
    android:layout_above="@id/relative_layout_button_dock"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="14dp"
    android:paddingHorizontal="6dp"
    android:background="@drawable/rounded_relative_layout"
    >
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ultra_wide"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="0.6"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_wide"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:background="@drawable/colored_textview"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="1.0"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/macro_tele"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@id/main_wide"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="2.0"
        android:textColor="@color/white"
        android:textSize="11sp" />
</LinearLayout>

<com.google.android.material.slider.Slider
    android:id="@+id/zoom_slider"
    android:layout_width="210dp"
    android:layout_height="30dp"
    android:layout_above="@id/relative_layout_button_dock"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="12dp"
    android:elevation="6dp"
    android:value="0"
    android:valueFrom="0"
    android:valueTo="10"
    app:labelBehavior="gone"
    app:haloRadius="0dp"
    app:thumbRadius="12dp"
    app:thumbColor="#C5C5C5"
    app:trackColorActive="@color/white"
    app:trackColorInactive="#CD535252"
    app:trackHeight="4dp"
    android:visibility="invisible"
    />

<RelativeLayout
    android:id="@+id/relative_layout_button_dock"
    android:layout_width="match_parent"
    android:layout_height="154dp"
    android:minHeight="108dp"
    android:paddingTop="20dp"
    android:layout_above="@id/mode_picker_view"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_gal"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/rami"
        android:padding="1dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="38dp"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/circularImageView"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/capture"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00FFFFFF"
        android:hapticFeedbackEnabled="true"
        android:scaleType="fitXY"
        android:src="@drawable/capture_1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/front_back_switch"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:background="#00020202"
        android:scaleType="fitXY"
        android:src="@drawable/front_switch" />
</RelativeLayout>

<com.uncanny.camx.CustomViews.HorizontalPicker
    android:id="@+id/mode_picker_view"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:minHeight="32dp"
    android:layout_marginBottom="14dp"
    android:layout_alignParentBottom="true"
    android:paddingVertical="10dp"
    android:paddingHorizontal="12dp"
    android:textColor="@color/white"
    android:textSize="14sp"
    android:hapticFeedbackEnabled="true"
    android:marqueeRepeatLimit="-1"
    android:ellipsize="end"
    app:selectedColor="?colorControlActivated"
    app:sideItems="2"
    />

</RelativeLayout>